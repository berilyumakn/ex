import turtle

def draw_square(st):
    for i in range(1,5):
        st.forward(100)
        st.right(90)
        
def draw_art(): 
    window=turtle.Screen()
    window.bgcolor("red")
    
    brad=turtle.Turtle()
    brad.shape("turtle")
    brad.color("yellow")
    brad.speed(2)
    draw_square(brad)
    
    brad.forward(100)
    brad.right(90)
    brad.forward(100)
    brad.right(90)
    brad.forward(100)
    brad.right(90)
    
    window.exitonclick()

draw_square()
